{
  "manifest_version": 3,
  "name": "Playwright Test Runner",
  "version": "1.0",
  "description": "Runs Playwright tests",
  "permissions": ["activeTab", "scripting", "tabs"],
  "action": {
    "default_popup": "dist/popup/popup.html",
    "default_title": "Playwright Tests"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content/content.js"] 
    }
  ]
}