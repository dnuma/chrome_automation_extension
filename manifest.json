{
  "manifest_version": 3,
  "name": "Playwright Test Runner",
  "version": "1.0",
  "description": "Runs Playwright tests",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Playwright Tests"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.ts"] 
    }
  ]
}